extends ../layouts/common

block content
  h5.mr-3 User
  a.btn.btn-dark(class="navbar-brand", href='/users/create') New

  .d-flex.align-items-center
    form(action="/users/search", method="GET", class="ml-auto form-inline my-2 my-lg-0 d-flex")
      input(class="form-control mr-sm-2", type="text", placeholder="Search", 
      aria-label="Search", name="q")
      button(class="btn btn-outline-success my-2 my-sm-0") Search

  table.table
    tr
      th Name
      th Phone
      th Action
    each user in users
      tr
        td= user.name
        td= user.phone
        td
          a.btn.btn-light(href='/users/' + user.id) View